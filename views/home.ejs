<% layout("boilerplate") %>
<style>
    body {
        background-image: url('/imagebackground.avif');
        background-size: 100% 100%;
        background-position: center;
        background-repeat: no-repeat;
        margin: 0;
        padding: 0;
        font-family: 'Raleway', sans-serif;
        color: #ffffff;
        text-align: center;
        height: 100vh;
        width: 100vw;
        overflow: hidden;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .container {
        padding: 20px;
        border-radius: 10px;
    }

    .thank-button, .gift-button, .connect-link {
        display: inline-block;
        padding: 10px 20px;
        font-size: 1em;
        font-weight: 600;
        text-align: center;
        background-color: #ffcccc;
        color: #333333;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        margin: 10px;
    }

    .button-container {
        display: none;
        margin-top: 20px;
    }

    .dropdown-container {
        margin-top: 20px;
    }

    .dropdown-container select {
        padding: 10px;
        font-size: 1em;
        border-radius: 5px;
        cursor: pointer;
    }
</style>
</head>
<body>
    <div class="container">
        <h1>Happy Birthday, Himanshi!</h1>
        <p>You deserve all the happiness in the world.</p>
        
        <!-- "Thank Me" button -->
        <a id="thank-button" class="thank-button">Thank Me</a>
        
        <!-- Hidden gift options -->
        <div class="button-container">
            <p>Choose your gift!</p>
            <a href="/first" class="gift-button">Gift 1</a>
            <a href="/wish" class="gift-button" target="_blank">Gift 2</a>
            <a href="/treewish" class="gift-button" target="_blank">Gift 3</a>
        </div>
        
        <!-- Connect links -->
        <br>
        <!-- Dropdown to select time -->
        <br>
        <div class="dropdown-container">
            <form id="meetForm" method="POST" action="/meet">
                <label for="timeSelect" style="color: black;">In how much time do you want to meet him?</label>
                <select name="time" id="timeSelect">
                    <option value="180">3 Minutes</option>
                    <option value="300">5 Minutes</option>
                    <option value="600">10 Minutes</option>
                    <option value="900">15 Minutes</option>
                </select>
                <button type="submit" class="thank-button">Confirm</button>
            </form>
        </div>
        <br>
        <a href="/feedback" class="connect-link">Connect with me anytime you want</a>
    </div>
    <script>
        // Get the "Thank Me" button and the gift options container
        const thankButton = document.getElementById('thank-button');
        const buttonContainer = document.querySelector('.button-container');
    
        // Show the gift options when "Thank Me" is clicked
        thankButton.addEventListener('click', function() {
            buttonContainer.style.display = 'block'; // Show the gift options
            thankButton.style.display = 'none'; // Hide the "Thank Me" button
        });
    </script>
</body>

<% layout("boilerplate") %>
    <style>
        /* Add this style to set the background image on the entire site */
        body {
            background-image: url('/imagebackground.avif');
            background-size: 100% 100%;
            background-position: center;
            background-repeat: no-repeat;
            margin: 0;
            padding: 0;
            font-family: 'Raleway', sans-serif;
            color: #ffffff;
            text-align: center;
            height: 100vh;
            width: 100vw;
            overflow: hidden;

            /* Flexbox properties for centering */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .container {
            padding: 20px;
            border-radius: 10px;
        }

        .button-container {
            display: none;
            margin-top: 20px;
        }

        .thank-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            font-weight: 600;
            text-align: center;
            background-color: #f28a8a;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            margin-top: 20px;
        }

        .gift-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1em;
            font-weight: 600;
            text-align: center;
            background-color: #ffcccc;
            color: #333333;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            margin: 10px;
        }

        .connect-link {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 1em;
            font-weight: 600;
            text-align: center;
            background-color: #ffffff;
            color: #333333;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            border: 1px solid #333333;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Happy Birthday, Himanshi!</h1>
        <p>You deserve all the happiness in the world.</p>
        
        <!-- "Thank Me" button -->
        <a id="thank-button" class="thank-button">Thank Me</a>
        
        <!-- Hidden gift options -->
        <div class="button-container">
            <p>Choose your gift!</p>
            <a href="/first" class="gift-button">Gift 1</a>
            <a href="/wish" class="gift-button" target="_blank">Gift 2</a>
            <a href="/treewish" class="gift-button" target="_blank">Gift 3</a>
        </div>
        
        <!-- Connect link -->
         <br>
        <a href="/feedback" class="connect-link">Connect with me anytime you want</a>

    </div>
    <script>// Get the "Thank Me" button and the gift options container
        const thankButton = document.getElementById('thank-button');
        const buttonContainer = document.querySelector('.button-container');
    
        // Show the gift options when "Thank Me" is clicked
        thankButton.addEventListener('click', function() {
            buttonContainer.style.display = 'block'; // Show the gift options
            thankButton.style.display = 'none'; // Hide the "Thank Me" button
        });</script>
</body>
